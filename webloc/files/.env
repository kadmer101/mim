APP_NAME="WebBloc Platform"
APP_ENV=local
APP_KEY=base64:SoMeAAAA
APP_DEBUG=true
APP_URL=http://127.0.0.1:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=webblocs_dbn
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# SQLite Configuration for Websites
WEBBLOC_SQLITE_PATH="${APP_ROOT}/database/sqlite"
SQLITE_MAX_CONNECTIONS=10
SQLITE_CONNECTION_TIMEOUT=30

# WebBloc Configuration
WEBBLOC_ENCRYPTION_KEY=
WEBBLOC_CDN_BASE_URL="${APP_URL}/cdn"
WEBBLOC_ALLOWED_ORIGINS="https://localhost:3000,https://*.yourdomain.com"
WEBBLOC_DEFAULT_RATE_LIMIT_MINUTE=60
WEBBLOC_DEFAULT_RATE_LIMIT_HOUR=1000
WEBBLOC_DEFAULT_RATE_LIMIT_DAY=10000

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=webbloc_

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration
QUEUE_CONNECTION=sync
QUEUE_FAILED_DRIVER=database-uuids

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@webbloc.com"
MAIL_FROM_NAME="${APP_NAME}"

# File Storage
FILESYSTEM_DISK=local
CDN_STORAGE_DISK=public

# Security Configuration
WEBBLOC_API_KEY_EXPIRY_DAYS=365
WEBBLOC_ENABLE_IP_WHITELIST=true
WEBBLOC_ENABLE_DOMAIN_WHITELIST=true
WEBBLOC_MAX_FILE_UPLOAD_SIZE=10240
WEBBLOC_ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,svg,pdf,doc,docx"

# Performance Configuration
WEBBLOC_CACHE_TTL=3600
WEBBLOC_CDN_CACHE_TTL=86400
WEBBLOC_ENABLE_GZIP=true
WEBBLOC_ENABLE_MINIFICATION=true

# Monitoring & Logging
LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info
WEBBLOC_LOG_API_REQUESTS=true
WEBBLOC_LOG_SLOW_QUERIES=true

# Third-party Services
GOOGLE_ANALYTICS_ID=
SENTRY_LARAVEL_DSN=
